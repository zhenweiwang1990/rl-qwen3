# OpenAI API Key (required for GPT-4o as judge in evaluation)
OPENAI_API_KEY=your_openai_api_key_here

# vLLM Server Configuration (for local Qwen3 inference)
VLLM_BASE_URL=http://localhost:8000/v1

# AWS S3 Configuration (for model checkpoint backup)
BACKUP_BUCKET=your_s3_bucket_name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Training Configuration
RUN_ID=001
VERBOSE=false

# Model Configuration (base model for training)
MODEL_NAME=Qwen/Qwen3-14B
MAX_TURNS=10
MAX_TOKENS=2048

# Training Parameters
TRAJECTORIES_PER_GROUP=6
GROUPS_PER_STEP=8
LEARNING_RATE=1.2e-5
EVAL_STEPS=30
VAL_SET_SIZE=100
TRAINING_DATASET_SIZE=4000
NUM_EPOCHS=4

# Hardware Configuration (auto-detected if not set)
# DEVICE=cuda  # or mps for Apple Silicon
# TORCH_DEVICE=cuda:0  # or mps

# WandB Configuration (for experiment tracking)
WANDB_MODE=online  # Set to 'disabled' to turn off WandB
WANDB_PROJECT=qwen3-email-agent
# WANDB_ENTITY=your_wandb_username_or_team
# WANDB_API_KEY=your_wandb_api_key  # Or run: wandb login

